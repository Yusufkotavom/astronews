# =============================================================================
# ASTRO KOTACOM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# WORDPRESS CONFIGURATION (REQUIRED)
# =============================================================================

# WordPress Site URL (required)
WORDPRESS_SITE_URL=https://kotacom.id

# WordPress API Settings
WORDPRESS_POSTS_PER_PAGE=100
WORDPRESS_MAX_POSTS=10000

# =============================================================================
# IMAGE CONFIGURATION
# =============================================================================

# Image Download Control
# Set to 'true' to download images locally, 'false' to keep original URLs
DOWNLOAD_IMAGES=false
DOWNLOAD_FEATURED_IMAGES_ONLY=false
DOWNLOAD_CONTENT_IMAGES=false
KEEP_ORIGINAL_URLS=true

# Image Quality and Format
IMAGE_QUALITY=85
IMAGE_FORMAT=webp

# =============================================================================
# CLOUDINARY CONFIGURATION
# =============================================================================

# Cloudinary Account Settings (get from https://cloudinary.com/console)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Cloudinary Upload Settings
CLOUDINARY_FOLDER=kotacom
CLOUDINARY_TRANSFORMATION=f_auto,q_auto

# Migration Strategy: 'upload' or 'url-only'
CLOUDINARY_STRATEGY=url-only

# URL Transformation Settings
TRANSFORM_URLS=true
BACKUP_ORIGINAL=true

# =============================================================================
# CLOUDFLARE CONFIGURATION (Alternative to Cloudinary)
# =============================================================================

# Cloudflare Domain Settings
CLOUDFLARE_DOMAIN=images.kotacom.id
CLOUDFLARE_STRATEGY=cdn

# Cloudflare Images API (if using Cloudflare Images service)
CLOUDFLARE_IMAGES_API_TOKEN=your-images-api-token
CLOUDFLARE_ACCOUNT_ID=your-account-id

# Cloudflare R2 Storage (if using R2)
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-key
CLOUDFLARE_R2_BUCKET=kotacom-images
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Node Environment
NODE_ENV=development

# Development Server
PORT=4321
HOST=0.0.0.0

# =============================================================================
# BUILD SETTINGS
# =============================================================================

# Build Optimization
BUILD_OPTIMIZE=true
BUILD_ANALYZE=false

# =============================================================================
# SEO SETTINGS
# =============================================================================

# Site Information
SITE_TITLE=Kotacom - Jasa IT & Percetakan
SITE_DESCRIPTION=Jasa IT, percetakan, dan layanan teknologi terpercaya
SITE_URL=https://kotacom.id

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google Tag Manager
GTM_ID=GTM-XXXXXXX

# =============================================================================
# SOCIAL MEDIA (Optional)
# =============================================================================

# Social Media URLs
FACEBOOK_URL=https://facebook.com/kotacom
TWITTER_URL=https://twitter.com/kotacom
INSTAGRAM_URL=https://instagram.com/kotacom
LINKEDIN_URL=https://linkedin.com/company/kotacom

# =============================================================================
# CONTACT INFORMATION (Optional)
# =============================================================================

# Contact Details
CONTACT_EMAIL=info@kotacom.id
CONTACT_PHONE=+62-XXX-XXXX-XXXX
CONTACT_ADDRESS=Surabaya, Indonesia

# =============================================================================
# SECURITY SETTINGS (Optional)
# =============================================================================

# Security Headers
SECURITY_HEADERS=true
CSP_ENABLED=true

# =============================================================================
# CACHING SETTINGS (Optional)
# =============================================================================

# Cache Control
CACHE_MAX_AGE=3600
CACHE_STALE_WHILE_REVALIDATE=86400

# =============================================================================
# MONITORING (Optional)
# =============================================================================

# Error Reporting
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# =============================================================================
# NOTES
# =============================================================================
#
# 1. CLOUDINARY SETUP:
#    - Sign up at https://cloudinary.com/console
#    - Get your Cloud Name, API Key, and API Secret
#    - Recommended strategy: 'url-only' for quick start
#
# 2. CLOUDFLARE SETUP:
#    - Alternative to Cloudinary
#    - Requires Cloudflare account and domain setup
#    - Recommended strategy: 'cdn' for quick start
#
# 3. WORDPRESS SETUP:
#    - Ensure WordPress REST API is enabled
#    - Make sure your WordPress site is accessible
#    - Test connection with: npm run wordpress:test
#
# 4. IMAGE OPTIMIZATION:
#    - KEEP_ORIGINAL_URLS=true: Use original WordPress URLs
#    - DOWNLOAD_IMAGES=false: Don't download images locally
#    - Use Cloudinary or Cloudflare for optimization
#
# 5. SECURITY:
#    - Never commit .env file to version control
#    - Use strong, unique API keys
#    - Rotate keys regularly
#
# ============================================================================= 