---
export interface Props {
  images: Array<{
    src: string;
    alt: string;
    caption?: string;
  }>;
  columns?: 1 | 2 | 3 | 4;
  gap?: 'sm' | 'md' | 'lg';
}

const { images, columns = 2, gap = 'md' } = Astro.props;

const gridCols = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4'
};

const gapSizes = {
  sm: 'gap-2',
  md: 'gap-4',
  lg: 'gap-6'
};
---

<div class={`grid ${gridCols[columns]} ${gapSizes[gap]} my-8`}>
  {images.map((image) => (
    <figure class="group">
      <img 
        src={image.src} 
        alt={image.alt}
        class="w-full h-48 object-cover rounded-lg shadow-md group-hover:shadow-lg transition-shadow duration-300"
        loading="lazy"
        decoding="async"
      />
      {image.caption && (
        <figcaption class="mt-2 text-sm text-gray-600 dark:text-gray-400 text-center">
          {image.caption}
        </figcaption>
      )}
    </figure>
  ))}
</div> 