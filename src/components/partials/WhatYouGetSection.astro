---
// WhatYouGet Section component
export interface Props {
  what_you_get?: any;
}

const { what_you_get = {} } = Astro.props;
---

<!-- What You Get Section -->
<section class="bg-gray-50 dark:bg-gray-800">
  <div class="max-w-screen-xl px-4 py-8 mx-auto sm:py-16 lg:py-24">
    <div class="max-w-screen-sm mx-auto text-center mb-8 lg:mb-16">
      {what_you_get.badge_text && (
        <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-primary-800 bg-primary-100 rounded-full dark:bg-primary-900 dark:text-primary-300 mb-4">
          {what_you_get.badge_text}
        </span>
      )}
      
      {what_you_get.title && (
        <h2 class="mb-4 text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl dark:text-white">
          {what_you_get.title}
        </h2>
      )}
      
      {what_you_get.subtitle && (
        <p class="text-lg font-normal text-gray-500 dark:text-gray-400">
          {what_you_get.subtitle}
        </p>
      )}
    </div>

    {what_you_get.points && what_you_get.points.length > 0 && (
      <div class="grid gap-8 lg:gap-12 md:grid-cols-2 lg:grid-cols-4">
        {what_you_get.points.map((point: any, index: number) => (
          <div class="text-center">
            <div class="flex items-center justify-center w-10 h-10 mx-auto mb-4 rounded-lg bg-primary-100 dark:bg-primary-900 lg:h-12 lg:w-12">
              {index === 0 && (
                <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 lg:w-6 lg:h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              )}
              {index === 1 && (
                <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 lg:w-6 lg:h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              )}
              {index === 2 && (
                <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 lg:w-6 lg:h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"></path>
                </svg>
              )}
              {index === 3 && (
                <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 lg:w-6 lg:h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
                </svg>
              )}
              {index > 3 && (
                <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 lg:w-6 lg:h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              )}
            </div>
            <h3 class="mb-2 text-xl font-bold dark:text-white">
              {point.title}
            </h3>
            <p class="text-gray-500 dark:text-gray-400">
              {point.description}
            </p>
          </div>
        ))}
      </div>
    )}
  </div>
</section> 