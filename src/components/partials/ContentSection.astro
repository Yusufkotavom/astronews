---
// Combined Content Section component
export interface Props {
  content?: any;
  kabupaten_kota?: any;
  local?: any;
}

const { content = {}, kabupaten_kota = [], local = {} } = Astro.props;
---

<!-- Combined Content Section -->
<section class="bg-white dark:bg-gray-900">
  <div class="max-w-screen-xl px-4 py-8 mx-auto sm:py-16 lg:py-24">
    <!-- Main Content -->
    <div class="max-w-4xl mx-auto">
      <!-- Header Content -->
      {content.title && (
        <h1 class="mb-6 text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl dark:text-white">
          {content.title}
        </h1>
      )}
      
      {content.subtitle && (
        <p class="mb-8 text-xl font-normal text-gray-500 dark:text-gray-400">
          {content.subtitle}
        </p>
      )}
      
      <!-- Main Image -->
      {content.image_url && (
        <div class="mb-8">
          <div class="relative">
            <img 
              src={content.image_url} 
              class="w-full rounded-lg shadow-lg" 
              alt="Keuntungan Website Profesional"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-lg"></div>
          </div>
        </div>
      )}
      
      <!-- Main Description -->
      {content.description && (
        <div class="prose prose-lg dark:prose-invert max-w-none mb-12">
          {content.description.split('. ').map((paragraph: string, index: number) => (
            <p class="text-base font-normal text-gray-500 dark:text-gray-400 mb-4">
              {paragraph.trim()}
              {index < content.description.split('. ').length - 1 ? '.' : ''}
            </p>
          ))}
        </div>
      )}
      
      <!-- Local Section -->
      {local.title && (
        <div class="mb-12">
          <h2 class="mb-6 text-3xl font-bold text-gray-900 dark:text-white">
            {local.title}
          </h2>
          
          {local.subtitle && (
            <p class="mb-4 text-lg font-normal text-gray-500 dark:text-gray-400">
              {local.subtitle}
            </p>
          )}
          
          {local.description && (
            <p class="mb-6 text-base font-normal text-gray-500 dark:text-gray-400">
              {local.description}
            </p>
          )}
          
          {local.city && local.city.length > 0 && (
            <div class="grid gap-6 md:grid-cols-3 mb-8">
              {local.city.map((city: any) => (
                <div class="text-center p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
                  <div class="flex items-center justify-center w-16 h-16 mx-auto mb-4 rounded-lg bg-primary-100 dark:bg-primary-900">
                    <svg class="w-8 h-8 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <h3 class="mb-2 text-xl font-bold dark:text-white">
                    {city.title}
                  </h3>
                  <p class="text-gray-500 dark:text-gray-400">
                    {city.description}
                  </p>
                </div>
              ))}
            </div>
          )}
        </div>
      )}
      
      <!-- Kabupaten Kota Section -->
      {kabupaten_kota && kabupaten_kota.length > 0 && (
        <div class="mb-12">
          <h2 class="mb-6 text-3xl font-bold text-gray-900 dark:text-white">
            Jangkauan Layanan di Bekasi
          </h2>
          <p class="mb-8 text-lg font-normal text-gray-500 dark:text-gray-400">
            Kami melayani pembuatan website di seluruh wilayah Bekasi dan sekitarnya
          </p>
          
          <div class="grid gap-8 md:grid-cols-2">
            {kabupaten_kota.map((kabupaten: any) => (
              <div class="bg-gray-50 dark:bg-gray-800 rounded-lg shadow-lg p-8">
                <div class="flex items-center mb-6">
                  <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-primary-100 dark:bg-primary-900 mr-4">
                    <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                  <h3 class="text-2xl font-bold dark:text-white">
                    {kabupaten.nama}
                  </h3>
                </div>
                
                <p class="text-gray-500 dark:text-gray-400 mb-6">
                  {kabupaten.description}
                </p>
                
                {kabupaten.kecamatan && kabupaten.kecamatan.length > 0 && (
                  <div>
                    <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                      Kecamatan yang Kami Layani:
                    </h4>
                    <div class="grid gap-2">
                      {kabupaten.kecamatan.map((kecamatan: any) => (
                        <a href={kecamatan.link} 
                           class="flex items-center p-3 text-gray-700 bg-white dark:bg-gray-700 rounded-lg hover:bg-primary-50 dark:text-gray-300 dark:hover:bg-gray-600 transition-colors duration-200">
                          <svg class="w-4 h-4 mr-3 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                          </svg>
                          {kecamatan.nama}
                        </a>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      )}
      
      <!-- CTA Section -->
      <div class="text-center bg-gray-50 dark:bg-gray-800 rounded-lg p-8">
        <h3 class="mb-4 text-2xl font-bold text-gray-900 dark:text-white">
          Siap Memulai Project Website Anda?
        </h3>
        <p class="mb-6 text-gray-500 dark:text-gray-400">
          Dapatkan website profesional yang sesuai dengan kebutuhan bisnis Anda
        </p>
        <a href="/contact" 
          class="inline-flex items-center px-8 py-4 text-lg font-medium text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 transition-colors duration-200">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Hubungi Kami Sekarang
        </a>
      </div>
    </div>
  </div>
</section> 