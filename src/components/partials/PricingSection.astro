---
// PricingSection partial component
export interface Props {
  pricing?: any;
}

const { pricing } = Astro.props;
---

<!-- Pricing Section with Modern Cards -->
{pricing &&
  <section class="bg-gray-50 dark:bg-gray-800">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center mb-8 lg:mb-16">
        <span class="inline-flex items-center justify-center px-3 py-1 text-sm font-medium text-blue-600 bg-blue-100 rounded-full dark:bg-blue-900 dark:text-blue-300 mb-4">
          {pricing.badge_text}
        </span>
        <h2 class="mb-4 text-4xl font-extrabold leading-tight text-gray-900 dark:text-white">
          {pricing.title}
        </h2>
        <p class="font-light text-gray-500 lg:mb-16 sm:text-xl dark:text-gray-400">
          {pricing.description}
        </p>
      </div>
      {pricing.plan && pricing.plan.length > 0 && (
        <div class="grid gap-8 lg:grid-cols-3">
          {pricing.plan.map((plan: any, index: number) => (
            <div class={`group relative flex flex-col p-8 mx-auto max-w-lg text-center text-gray-900 bg-white rounded-2xl border shadow-lg dark:border-gray-600 xl:p-10 dark:bg-gray-700 dark:text-white transition-all duration-300 transform hover:-translate-y-2 ${index === 1 ? 'border-blue-600 shadow-blue-600/25 ring-2 ring-blue-600/20 scale-105' : 'border-gray-200 hover:border-blue-300 hover:shadow-2xl'}`}>
                <div class="flex justify-center mb-6">
                  <span class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-blue-600 bg-blue-100 rounded-full dark:bg-blue-900 dark:text-blue-300 animate-pulse">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    {plan.badge}
                  </span>
                </div>
              <h3 class="mb-4 text-2xl font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">{plan.title}</h3>
              <div class="flex justify-center items-baseline my-8">
                <span class="mr-2 text-5xl font-extrabold text-gray-900 dark:text-white">{plan.price}</span>
              </div>
              <p class="font-light text-gray-600 sm:text-lg dark:text-gray-400 mb-8 leading-relaxed">{plan.description}</p>
              {plan.feature && plan.feature.length > 0 && (
                <ul role="list" class="mb-8 space-y-4 text-left">
                  {plan.feature.map((feature: string, featureIndex: number) => (
                    <li class="flex items-center space-x-3">
                      <div class="flex-shrink-0 w-5 h-5 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
                        <svg class="w-3 h-3 text-green-600 dark:text-green-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                      </div>
                      <span class="text-gray-700 dark:text-gray-300 font-medium">{feature}</span>
                    </li>
                  ))}
                </ul>
              )}
              <a href="#contact" class={`text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 font-medium rounded-lg text-sm px-5 py-3 text-center dark:text-white dark:focus:ring-blue-900 transition-all duration-300 group-hover:shadow-lg ${index === 1 ? 'bg-blue-700 hover:bg-blue-800 shadow-lg' : ''}`}>
                <span class="flex items-center justify-center">
                  Pilih Paket
                  <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                </span>
              </a>
            </div>
          ))}
        </div>
      )}
    </div>
  </section>
}