---
// WhyUsSection partial component
export interface Props {
  why_us?: any;
}

const { why_us } = Astro.props;
---

<!-- Why Us Section -->
<section class="border-t border-b border-gray-100 bg-gray-50 dark:bg-gray-800 dark:border-gray-700">
  <div class="max-w-screen-xl px-4 py-8 mx-auto sm:py-16 lg:py-24">
    <div class="max-w-3xl mx-auto text-center">
        <a href="#" class="inline-flex items-center justify-between px-1 py-1 pr-4 mb-6 text-sm text-gray-700 bg-gray-100 rounded-full dark:bg-gray-800 dark:text-white hover:bg-gray-200 dark:hover:bg-gray-700" role="alert">
            <span class="px-3 py-1 mr-3 text-xs text-white rounded-full bg-primary-700">New</span> 
            <span class="text-sm font-medium">{why_us?.badge_text || "Jasa Pembuatan Website Terbaik"}</span>
            <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
        </a>
      <h2 class="mb-4 text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl dark:text-white">
        {why_us?.title}
      </h2>
      <p class="text-gray-500 dark:text-gray-400 sm:text-xl">
        {why_us?.subtitle}
      </p>
    </div>

    <div
      class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 lg:grid-cols-4 gap-6 sm:mt-12 lg:mt-16 [column-count:1] sm:[column-count:2] lg:[column-count:3]">
      {why_us?.point && why_us.point.length > 0 && why_us.point.slice(0, 9).map((point: any, idx: number) => (
        <div
          class="break-inside-avoid p-6 bg-white rounded-lg shadow dark:bg-gray-700 transition-transform transition-shadow duration-200 hover:shadow-lg hover:-translate-y-1 hover:bg-gray-50 dark:hover:bg-gray-600 flex flex-col"
          style="margin-bottom: 1.5rem;"
        >
          {/* Badge for each card if exists */}
          {point.badge && (
            <span class="inline-block mb-2 px-2 py-0.5 text-xs font-semibold rounded-full bg-primary-50 text-primary-700 dark:bg-primary-900 dark:text-primary-300 self-start">
              {point.badge}
            </span>
          )}
          <div
            class="flex items-center justify-center w-10 h-10 mb-4 rounded-lg bg-primary-100 lg:h-12 lg:w-12 dark:bg-primary-900 transition-transform duration-200 group-hover:scale-110"
          >
            {idx === 0 && (
              <svg class="w-5 h-5 text-primary-700 lg:w-8 lg:h-8 dark:text-primary-400" fill="currentColor"
                viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M6.672 1.911a1 1 0 10-1.932.518l.259.966a1 1 0 001.932-.518l-.26-.966zM2.429 4.74a1 1 0 10-.517 1.932l.966.259a1 1 0 00.517-1.932l-.966-.26zm8.814-.569a1 1 0 00-1.415-1.414l-.707.707a1 1 0 101.415 1.415l.707-.708zm-7.071 7.072l.707-.707A1 1 0 003.465 9.12l-.708.707a1 1 0 001.415 1.415zm3.2-5.171a1 1 0 00-1.3 1.3l4 10a1 1 0 001.823.075l1.38-2.759 3.018 3.02a1 1 0 001.414-1.415l-3.019-3.02 2.76-1.379a1 1 0 00-.076-1.822l-10-4z"
                  clip-rule="evenodd" />
              </svg>
            )}
            {idx === 1 && (
              <svg class="w-5 h-5 text-primary-700 lg:w-8 lg:h-8 dark:text-primary-400" fill="currentColor"
                viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"
                  clip-rule="evenodd" />
              </svg>
            )}
            {idx === 2 && (
              <svg class="w-5 h-5 text-primary-700 lg:w-8 lg:h-8 dark:text-primary-400" fill="currentColor"
                viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.476.859h4.002z" />
              </svg>
            )}
            {idx === 3 && (
              <svg class="w-5 h-5 text-primary-700 lg:w-8 lg:h-8 dark:text-primary-400" fill="currentColor"
                viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M4 2a2 2 0 00-2 2v11a3 3 0 106 0V4a2 2 0 00-2-2H4zm1 14a1 1 0 100-2 1 1 0 000 2zm5-1.757l4.9-4.9a2 2 0 000-2.828L13.485 5.1a2 2 0 00-2.828 0L10 5.757v8.486zM16 18H9.071l6-6H16a2 2 0 012 2v2a2 2 0 01-2 2z"
                  clip-rule="evenodd" />
              </svg>
            )}
            {idx === 4 && (
              <svg class="w-5 h-5 text-primary-700 lg:w-8 lg:h-8 dark:text-primary-400" fill="currentColor"
                viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z"
                  clip-rule="evenodd" />
              </svg>
            )}
          </div>
          <h3 class="mb-2 text-xl font-bold dark:text-white">
            {point.title}
          </h3>
          <p class="text-gray-500 dark:text-gray-400">
            {point.description}
          </p>
          <ul class="space-y-4">
            {point.feature && point.feature.length > 0 && point.feature.map((feature: string) => (
              <li class="flex items-center gap-2.5">
                <div
                  class="inline-flex items-center justify-center w-5 h-5 rounded-full bg-primary-100 text-primary-700 shrink-0 dark:bg-primary-900 dark:text-primary-400">
                  <svg class="w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span class="text-base font-light text-gray-900 dark:text-white">
                  {feature}
                </span>
              </li>
            ))}
          </ul>
          {/* Small button for each card */}
          <div class="mt-4 flex flex-wrap gap-2">
            {point.link && point.link && (
              <a
                href={point.link}
                class="inline-flex items-center px-3 py-1.5 text-xs font-medium rounded bg-blue-500 text-white hover:bg-blue-600 dark:bg-blue-900 dark:text-white dark:hover:bg-blue-800 transition-colors duration-150 border border-blue-100 dark:border-blue-800"
                target={"_blank"}
                rel={"noopener noreferrer"}
              >
                {"Learn more"}
                <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 