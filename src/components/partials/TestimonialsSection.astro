---
// TestimonialsSection partial component
export interface Props {
  testimonials?: any;
}

const { testimonials } = Astro.props;
---

<!-- Testimonials Section from Agency.astro with JSON Data -->
{testimonials && testimonials.card && (
  <section class="bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center mb-8 lg:mb-16">
        <span class="inline-flex items-center justify-center px-3 py-1 text-sm font-medium text-blue-600 bg-blue-100 rounded-full dark:bg-blue-900 dark:text-blue-300 mb-4">
          {testimonials.badge_text}
        </span>
        <h2 class="mb-4 text-4xl font-extrabold leading-tight text-gray-900 dark:text-white">
          {testimonials.title}
        </h2>
        <p class="font-light text-gray-500 lg:mb-16 sm:text-xl dark:text-gray-400">
          {testimonials.subtitle}
        </p>
      </div>
      <div class="grid gap-6 lg:grid-cols-3">
        {testimonials.card.map((testimonial: any, index: number) => (
          <figure class="p-6 rounded-lg bg-gray-50 dark:bg-gray-800 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <blockquote class="text-sm text-gray-500 dark:text-gray-400">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">{testimonial.headline}</h3>
              <p class="my-4 leading-relaxed">"{testimonial.quote}"</p>
            </blockquote>
            <figcaption class="flex items-center space-x-3 mt-6">
              <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-200 rounded-full flex items-center justify-center text-white font-bold text-sm shadow-lg">
                {testimonial.name.charAt(0)}
              </div>
              <div class="space-y-0.5 font-medium dark:text-white">
                <div class="font-semibold">{testimonial.name}</div>
                <div class="text-sm text-gray-500 dark:text-gray-400">{testimonial.position}</div>
              </div>
            </figcaption>
          </figure>
        ))}
      </div>
    </div>
  </section>
)}