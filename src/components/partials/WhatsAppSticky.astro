---
// Sticky WhatsApp Button Component - Optimized for Performance
export interface Props {
  phoneNumber?: string;
  defaultMessage?: string;
}

const { 
  phoneNumber = '085799520350',
  defaultMessage = 'Halo Kotacom'
} = Astro.props;

// Get current page URL
const currentUrl = Astro.url.href;
const fullMessage = `${defaultMessage} ${currentUrl} saya tertarik dengan jasa. Sebutkan kebutuhan anda.`;
const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(fullMessage)}`;

// Preload WhatsApp API
const whatsappApiUrl = 'https://web.whatsapp.com/send';
---

<!-- Preload WhatsApp API -->
<link rel="preconnect" href="https://wa.me">
<link rel="preconnect" href="https://web.whatsapp.com">
<link rel="dns-prefetch" href="https://wa.me">
<link rel="dns-prefetch" href="https://web.whatsapp.com">

<!-- Sticky WhatsApp Button -->
<div id="whatsapp-sticky" class="fixed bottom-6 right-6 z-50">
  <!-- WhatsApp Button -->
  <button 
    id="whatsapp-toggle" 
    class="bg-green-500 hover:bg-green-600 text-white rounded-full p-4 shadow-lg focus:outline-none focus:ring-4 focus:ring-green-300"
    aria-label="Open WhatsApp chat"
  >
    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
    </svg>
  </button>

  <!-- WhatsApp Form (Hidden by default) -->
  <div id="whatsapp-form" class="hidden absolute bottom-16 right-0 w-80 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700">
    <div class="p-6">
      <!-- Header -->
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Chat via WhatsApp</h3>
        <button id="close-form" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Form -->
      <form id="form-content" class="space-y-4">
        <div>
          <label for="customer-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
            Nama Anda
          </label>
          <input 
            type="text" 
            id="customer-name" 
            name="name"
            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
            placeholder="Masukkan nama Anda"
          >
        </div>

        <div>
          <label for="customer-needs" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
            Kebutuhan Anda
          </label>
          <textarea 
            id="customer-needs" 
            name="needs"
            rows="3"
            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
            placeholder="Jelaskan kebutuhan website atau layanan yang Anda butuhkan"
          ></textarea>
        </div>

        <button 
          type="submit"
          class="w-full bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg flex items-center justify-center"
        >
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
          </svg>
          Kirim via WhatsApp
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  // Optimized WhatsApp Integration with Caching
  (function() {
    'use strict';
    
    // Cache DOM elements
    const whatsappToggle = document.getElementById('whatsapp-toggle');
    const whatsappForm = document.getElementById('whatsapp-form');
    const closeForm = document.getElementById('close-form');
    const formContent = document.getElementById('form-content');
    const customerName = document.getElementById('customer-name');
    const customerNeeds = document.getElementById('customer-needs');

    // Preload WhatsApp API
    function preloadWhatsApp() {
      const link = document.createElement('link');
      link.rel = 'preconnect';
      link.href = 'https://wa.me';
      document.head.appendChild(link);
      
      const link2 = document.createElement('link');
      link2.rel = 'preconnect';
      link2.href = 'https://web.whatsapp.com';
      document.head.appendChild(link2);
    }

    // Initialize preloading
    preloadWhatsApp();

    // Toggle form visibility with optimized performance
    whatsappToggle?.addEventListener('click', (e) => {
      e.preventDefault();
      whatsappForm?.classList.toggle('hidden');
      
      // Focus on first input when form opens
      if (!whatsappForm?.classList.contains('hidden')) {
        setTimeout(() => {
          customerName?.focus();
        }, 100);
      }
    });

    // Close form
    closeForm?.addEventListener('click', () => {
      whatsappForm?.classList.add('hidden');
    });

    // Close form when clicking outside with event delegation
    document.addEventListener('click', (e) => {
      const target = e.target as Element;
      if (!target.closest('#whatsapp-sticky')) {
        whatsappForm?.classList.add('hidden');
      }
    });

    // Handle form submission with optimized message creation
    formContent?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const name = (customerName as HTMLInputElement)?.value?.trim() || '';
      const needs = (customerNeeds as HTMLTextAreaElement)?.value?.trim() || '';
      const currentUrl = window.location.href;
      
      // Create optimized WhatsApp message
      const message = `Halo Kotacom ${currentUrl} saya tertarik dengan jasa.

Sebutkan kebutuhan anda.

Nama: ${name}
Kebutuhan: ${needs}`;
      
      // Open WhatsApp with optimized URL
      const whatsappUrl = `https://wa.me/085799520350?text=${encodeURIComponent(message)}`;
      
      // Use window.open with optimized parameters
      const whatsappWindow = window.open(whatsappUrl, '_blank', 'noopener,noreferrer');
      
      // Close form and reset
      whatsappForm?.classList.add('hidden');
      (formContent as HTMLFormElement).reset();
      
      // Focus back on toggle button
      setTimeout(() => {
        whatsappToggle?.focus();
      }, 100);
    });

    // Add optimized pulse animation
    if (whatsappToggle) {
      whatsappToggle.classList.add('animate-pulse');
      
      // Stop pulse on hover with debouncing
      let hoverTimeout: number;
      
      whatsappToggle.addEventListener('mouseenter', () => {
        clearTimeout(hoverTimeout);
        whatsappToggle.classList.remove('animate-pulse');
      });
      
      whatsappToggle.addEventListener('mouseleave', () => {
        hoverTimeout = window.setTimeout(() => {
          whatsappToggle.classList.add('animate-pulse');
        }, 100);
      });
    }

         // Add keyboard navigation support
     document.addEventListener('keydown', (e) => {
       if (e.key === 'Escape' && whatsappForm && !whatsappForm.classList.contains('hidden')) {
         whatsappForm.classList.add('hidden');
       }
     });
  })();
</script>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: .5;
    }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  /* Simple styling */
  #whatsapp-form.hidden {
    display: none;
  }
</style> 