---
// Contact1 component
export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Default Title",
  description = "Default description"
} = Astro.props;

// Import contact data (assuming it's in the same directory)
import contactData from '../../../data/contact.json';

---

<section class="border-b border-gray-100 bg-gray-50 dark:bg-gray-800 dark:border-gray-700">
    <div class="max-w-screen-xl px-4 py-8 mx-auto sm:py-16 lg:py-24 pt-20 sm:pt-24 lg:pt-32">
        <div class="max-w-2xl mx-auto text-center">
            <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl dark:text-white">
                How can we help you?
            </h2>
            <p class="mt-4 text-base text-gray-500 sm:text-xl dark:text-gray-500">
                Here are a few of the questions we get the most. If you don't see what's on your mind, reach out to us
                anytime on phone,
                chat, or email.
            </p>
        </div>

        <div class="max-w-2xl mx-auto mt-8">
            <label for="email-adress-icon"
                class="block mb-2 text-sm font-medium text-gray-900 sr-only dark:text-gray-300">
                Search keywords
            </label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg class="w-6 h-6 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                            clip-rule="evenodd" />
                    </svg>
                </div>
                <input type="text" id="email-adress-icon"
                    class="block w-full p-4 pl-12 text-gray-900 bg-white border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                    placeholder="Type keywords to find answers">
            </div>
            <p class="mt-4 text-sm text-center text-gray-500 dark:text-gray-400">
                You can also browse the topics below to find what you are looking for.
            </p>
        </div>

        <div class="grid gap-8 mt-12 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 sm:mt-16 lg:mt-20">
            <div class="p-6 bg-white rounded-lg shadow-sm dark:bg-gray-700">
                <div
                    class="flex items-center justify-center w-10 h-10 mb-4 rounded-lg bg-primary-100 dark:bg-primary-900 lg:h-12 lg:w-12">
                    <svg class="w-5 h-5 text-primary-600 lg:w-6 lg:h-6 dark:text-primary-300" fill="currentColor"
                        viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"></path>
                        <path fill-rule="evenodd"
                            d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z"
                            clip-rule="evenodd"></path>
                    </svg>
                </div>
                <h3 class="mb-4 text-xl font-bold dark:text-white">
                    General
                </h3>
                <ul role="list" class="mb-4 space-y-3 text-sm text-gray-500 dark:text-gray-400">
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">About forwarding limits</a>
                    </li>
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">How to update Flowbite?</a>
                    </li>
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">How to change privacy settings?</a>
                    </li>
                </ul>
                <a href="#" class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-500">See
                    all</a>
            </div>

            <div class="p-6 bg-white rounded-lg shadow-sm dark:bg-gray-700">
                <div
                    class="flex items-center justify-center w-10 h-10 mb-4 rounded-lg bg-primary-100 dark:bg-primary-900 lg:h-12 lg:w-12">
                    <svg class="w-5 h-5 text-primary-600 lg:w-6 lg:h-6 dark:text-primary-300" fill="currentColor"
                        viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"></path>
                        <path fill-rule="evenodd"
                            d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"
                            clip-rule="evenodd"></path>
                    </svg>
                </div>
                <h3 class="mb-4 text-xl font-bold dark:text-white">
                    License
                </h3>
                <ul role="list" class="mb-4 space-y-3 text-sm text-gray-500 dark:text-gray-400">
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">Verifying your number</a>
                    </li>
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">How to restore your chat history</a>
                    </li>
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">How to manage your notifications</a>
                    </li>
                </ul>
                <a href="#" class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-500">See
                    all</a>
            </div>

            <div class="p-6 bg-white rounded-lg shadow-sm dark:bg-gray-700">
                <div
                    class="flex items-center justify-center w-10 h-10 mb-4 rounded-lg bg-primary-100 dark:bg-primary-900 lg:h-12 lg:w-12">
                    <svg class="w-5 h-5 text-primary-600 lg:w-6 lg:h-6 dark:text-primary-300" fill="currentColor"
                        viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M5 2a2 2 0 00-2 2v14l3.5-2 3.5 2 3.5-2 3.5 2V4a2 2 0 00-2-2H5zm4.707 3.707a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L8.414 9H10a3 3 0 013 3v1a1 1 0 102 0v-1a5 5 0 00-5-5H8.414l1.293-1.293z"
                            clip-rule="evenodd"></path>
                    </svg>
                </div>
                <h3 class="mb-4 text-xl font-bold dark:text-white">
                    Refund policy
                </h3>
                <ul role="list" class="mb-4 space-y-4 text-sm text-gray-500 dark:text-gray-400">
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">How to restore your chat history</a>
                    </li>
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">How to use status</a>
                    </li>
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">How to manage your notifications</a>
                    </li>
                </ul>
                <a href="#" class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-500">See
                    all</a>
            </div>

            <div class="p-6 bg-white rounded-lg shadow-sm dark:bg-gray-700">
                <div
                    class="flex items-center justify-center w-10 h-10 mb-4 rounded-lg bg-primary-100 dark:bg-primary-900 lg:h-12 lg:w-12">
                    <svg class="w-5 h-5 text-primary-600 lg:w-6 lg:h-6 dark:text-primary-300" fill="currentColor"
                        viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z"
                            clip-rule="evenodd"></path>
                    </svg>
                </div>
                <h3 class="mb-4 text-xl font-bold dark:text-white">
                    Account
                </h3>
                <ul role="list" class="mb-4 space-y-3 text-sm text-gray-500 dark:text-gray-400">
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">About WhatsApp Web and Desktop</a>
                    </li>
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">How to log in or out</a>
                    </li>
                    <li>
                        <a href="#" class="hover:underline hover:text-gray-900 dark:hover:text-white">How to manage your notifications</a>
                    </li>
                </ul>
                <a href="#" class="text-sm font-medium text-primary-600 hover:underline dark:text-primary-500">See
                    all</a>
            </div>
        </div>
    </div>
</section>

<section class="bg-white dark:bg-gray-900 border-t border-b border-gray-100 bg-gray-50 dark:bg-gray-800 dark:border-gray-700">
    <div class="max-w-screen-xl px-4 py-8 mx-auto sm:py-16 lg:py-24">
        <div class="grid grid-cols-1 gap-6 text-center sm:gap-16 sm:grid-cols-2 lg:grid-cols-3">
            <div>
                <div
                    class="inline-flex items-center justify-center w-16 h-16 mx-auto text-white bg-blue-500 rounded-lg dark:bg-gray-800 dark:text-white">
                    <svg aria-hidden="true" class="w-10 h-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                        fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z"
                            clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="mt-4">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                        Company information:
                    </h3>
                    <p class="mt-1 text-base font-normal text-gray-500 dark:text-gray-400">
                        {contactData.contact.company}<br />
                        {contactData.contact.company_description}
                    </p>
                </div>
            </div>

            <div>
                <div
                    class="inline-flex items-center justify-center w-16 h-16 mx-auto text-white bg-blue-500 rounded-lg dark:bg-gray-800 dark:text-white">
                    <svg aria-hidden="true" class="w-10 h-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                        fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                            clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="mt-4">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                        Address:
                    </h3>
                    <p class="mt-1 text-base font-normal text-gray-500 dark:text-gray-400">
                        {contactData.contact.address}
                    </p>
                </div>
            </div>

            <div class="hidden lg:block">
                <div
                    class="inline-flex items-center justify-center w-16 h-16 mx-auto text-white bg-blue-500 rounded-lg dark:bg-gray-800 dark:text-white">
                    <svg aria-hidden="true" class="w-10 h-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                        fill="currentColor">
                        <path
                            d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                    </svg>
                </div>
                <div class="mt-4">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                        Contact us:
                    </h3>
                    <p class="mt-1 text-base font-normal text-gray-500 dark:text-gray-400">
                        Email us for general queries, including marketing and partnership opportunities.
                    </p>
                    <a href="mailto:{contactData.contact.email}" title=""
                        class="block mt-1 text-base font-semibold text-gray-900 dark:text-white hover:underline">
                        {contactData.contact.email}
                        <br />
                        <span class="text-sm text-gray-500 dark:text-gray-400">
                            <a href="tel:{contactData.contact.phone}" class="hover:underline hover:text-gray-900 dark:hover:text-white">
                                {contactData.contact.phone}
                            </a>
                        </span>
                        
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
                