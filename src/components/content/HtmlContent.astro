  /* Dark mode support */
  .dark .html-content {
    color: #e5e7eb;
  }
  
  .dark .html-content h1,
  .dark .html-content h2,
  .dark .html-content h3,
  .dark .html-content h4,
  .dark .html-content h5,
  .dark .html-content h6 {
    color: #f9fafb;
  }
  
  .dark .html-content h1 {
    border-bottom-color: #374151;
  }
  
  .dark .html-content h2 {
    border-bottom-color: #4b5563;
  }
  
  .dark .html-content a {
    color: #60a5fa;
  }
  
  .dark .html-content a:hover {
    color: #93c5fd;
  }
  
  .dark .html-content blockquote {
    border-left-color: #60a5fa;
  }
  
  .dark .html-content th,
  .dark .html-content td {
    border-color: #374151;
  }
  
  .dark .html-content th {
    background-color: #374151;
    color: #f9fafb;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .html-content h1 {
      font-size: 1.875rem;
    }
    
    .html-content h2 {
      font-size: 1.5rem;
    }
    
    .html-content h3 {
      font-size: 1.25rem;
    }
  }
</style> 