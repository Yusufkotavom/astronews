---
interface Props {
  content: string;
}

const { content } = Astro.props;
---

<div class="html-content" set:html={content} />

<style>
  .html-content {
    /* Ensure proper styling for HTML content */
    line-height: 1.6;
  }
  
  .html-content h1,
  .html-content h2,
  .html-content h3,
  .html-content h4,
  .html-content h5,
  .html-content h6 {
    font-weight: bold;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    line-height: 1.2;
  }
  
  .html-content h1 {
    font-size: 2.25rem;
    border-bottom: 1px solid #e5e7eb;
    padding-bottom: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .html-content h2 {
    font-size: 1.875rem;
    border-bottom: 1px solid #f3f4f6;
    padding-bottom: 0.25rem;
    margin-bottom: 0.75rem;
  }
  
  .html-content h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }
  
  .html-content h4 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }
  
  .html-content h5 {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }
  
  .html-content h6 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }
  
  .html-content p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }
  
  .html-content a {
    color: #3b82f6;
    text-decoration: none;
  }
  
  .html-content a:hover {
    text-decoration: underline;
  }
  
  .html-content ul,
  .html-content ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .html-content li {
    margin-bottom: 0.5rem;
  }
  
  .html-content blockquote {
    border-left: 4px solid #3b82f6;
    padding-left: 1rem;
    margin: 1rem 0;
    font-style: italic;
  }
  
  .html-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 1rem 0;
  }
  
  .html-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
  }
  
  .html-content th,
  .html-content td {
    border: 1px solid #e5e7eb;
    padding: 0.75rem;
    text-align: left;
  }
  
  .html-content th {
    background-color: #f9fafb;
    font-weight: bold;
  }
  
  /* WordPress-specific class replacements */
  .html-content .gemini-blue {
    color: #3b82f6 !important;
  }
  
  .html-content .gemini-yellow {
    color: #f59e0b !important;
  }
  
  .html-content .gemini-green {
    color: #10b981 !important;
  }
  
  .html-content .gemini-purple {
    color: #8b5cf6 !important;
  }
  
  .html-content .bg-gemini-blue {
    background-color: #3b82f6 !important;
  }
  
  .html-content .bg-gemini-yellow {
    background-color: #f59e0b !important;
  }
  
  .html-content .bg-gemini-green {
    background-color: #10b981 !important;
  }
  
  .html-content .bg-gemini-purple {
    background-color: #8b5cf6 !important;
  }
  
  .html-content .text-gemini-blue {
    color: #3b82f6 !important;
  }
  
  .html-content .text-gemini-yellow {
    color: #f59e0b !important;
  }
  
  .html-content .text-gemini-green {
    color: #10b981 !important;
  }
  
  .html-content .text-gemini-purple {
    color: #8b5cf6 !important;
  }
  
  .html-content .hover\\:text-gemini-blue:hover {
    color: #3b82f6 !important;
  }
  
  .html-content .hover\\:text-gemini-purple:hover {
    color: #8b5cf6 !important;
  }
  
  .html-content .hover\\:bg-gemini-blue:hover {
    background-color: #3b82f6 !important;
  }
  
  .html-content .hover\\:bg-gemini-yellow:hover {
    background-color: #f59e0b !important;
  }
  
  .html-content .hover\\:bg-gemini-green:hover {
    background-color: #10b981 !important;
  }
  
  .html-content .hover\\:bg-gemini-purple:hover {
    background-color: #8b5cf6 !important;
  }
  
  /* Replace dashicons with FontAwesome or remove */
  .html-content .dashicons {
    display: inline-block;
    width: 1em;
    height: 1em;
    vertical-align: middle;
    background-size: contain;
    background-repeat: no-repeat;
  }
  
