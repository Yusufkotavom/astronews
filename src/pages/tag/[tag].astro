---
import Layout from '../../layouts/Layout.astro';
import CategorySidebar from '../../components/partials/CategorySidebar.astro';
import { getCachedPosts, formatDate, getTags } from '../../utils/content-utils';

export async function getStaticPaths() {
  const tags = await getTags();
  
  return tags.map(({ tag }) => ({
    params: { tag: tag.toLowerCase().replace(/\s+/g, '-') },
    props: { tagName: tag }
  }));
}

const { tag } = Astro.params;
const { tagName } = Astro.props;

// Get all posts for this tag
const allPosts = await getCachedPosts();

const tagPosts = allPosts.filter(post => 
  post.data.tags && 
  Array.isArray(post.data.tags) && 
  post.data.tags.some(postTag => 
    postTag.toLowerCase().replace(/\s+/g, '-') === tag
  )
).sort((a, b) => 
  new Date(b.data.publishDate || 0).getTime() - 
  new Date(a.data.publishDate || 0).getTime()
);

// Pagination
const postsPerPage = 9;
const currentPage = parseInt(Astro.url.searchParams.get('page') || '1');
const totalPosts = tagPosts.length;
const totalPages = Math.ceil(totalPosts / postsPerPage);
const startIndex = (currentPage - 1) * postsPerPage;
const endIndex = startIndex + postsPerPage;
const paginatedPosts = tagPosts.slice(startIndex, endIndex);

const pageTitle = `${tagName} Posts | Kotacom Blog`;
const pageDescription = `Discover all blog posts tagged with ${tagName}. Find articles, tutorials, and insights related to ${tagName.toLowerCase()}.`;
---

<Layout
  title={pageTitle}
  description={pageDescription}
  canonical={`https://www.kotacom.id/tag/${tag}`}
>
  <div class="bg-white dark:bg-gray-900 min-h-screen">
    <!-- Tag Header -->
    <section class="bg-gradient-to-br from-purple-50 to-pink-100 dark:from-gray-800 dark:to-gray-900 py-12">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center">
          <nav class="mb-6">
            <ol class="flex items-center justify-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
              <li><a href="/" class="hover:text-gray-700 dark:hover:text-gray-300">Home</a></li>
              <li>/</li>
              <li><a href="/blog" class="hover:text-gray-700 dark:hover:text-gray-300">Blog</a></li>
              <li>/</li>
              <li class="text-gray-900 dark:text-white font-medium">#{tagName}</li>
            </ol>
          </nav>
          
          <div class="inline-flex items-center px-4 py-2 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 rounded-full text-lg font-medium mb-4">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
            #{tagName}
          </div>
          
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
            Posts tagged with "{tagName}"
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            {totalPosts} article{totalPosts !== 1 ? 's' : ''} found with the tag {tagName}
          </p>
        </div>
      </div>
    </section>

    <!-- Content Section -->
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
          
          <!-- Main Content -->
          <div class="lg:col-span-3">
            {paginatedPosts.length > 0 ? (
              <>
                <!-- Posts Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 mb-12">
                  {paginatedPosts.map((post) => (
                    <article class="bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden transition-all duration-300 group">
                      <!-- Featured Image -->
                      <div class="aspect-video bg-gray-200 dark:bg-gray-700 overflow-hidden">
                        {post.data.image ? (
                          <img 
                            src={post.data.image} 
                            alt={post.data.imageAlt || post.data.title}
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            loading="lazy"
                            decoding="async"
                          />
                        ) : (
                          <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-600 flex items-center justify-center">
                            <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                            </svg>
                          </div>
                        )}
                      </div>

                      <!-- Content -->
                      <div class="p-6">
                        <!-- Meta Info -->
                        <div class="flex items-center justify-between mb-3">
                          <div class="flex items-center space-x-2">
                            {post.data.category && (
                              <a 
                                href={`/category/${post.data.category.toLowerCase().replace(/\s+/g, '-')}`}
                                class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300 hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors duration-200"
                              >
                                {post.data.category}
                              </a>
                            )}
                            
                            {post.data.difficulty && (
                              <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                                post.data.difficulty === 'Beginner' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' :
                                post.data.difficulty === 'Intermediate' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300' :
                                'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300'
                              }`}>
                                {post.data.difficulty}
                              </span>
                            )}
                            
                            {post.data.featured && (
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300">
                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                Featured
                              </span>
                            )}
                          </div>
                          
                          <time class="text-sm text-gray-500 dark:text-gray-400">
                            {formatDate(post.data.publishDate)}
                          </time>
                        </div>

                        <!-- Title & Description -->
                        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200">
                          <a href={`/${post.slug}`} class="hover:underline">
                            {post.data.title}
                          </a>
                        </h2>
                        
                        <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
                          {post.data.description}
                        </p>

                        <!-- All Tags -->
                        {post.data.tags && post.data.tags.length > 0 && (
                          <div class="flex flex-wrap gap-2 mb-4">
                            {post.data.tags.slice(0, 4).map((postTag) => (
                              <a 
                                href={`/tag/${postTag.toLowerCase().replace(/\s+/g, '-')}`}
                                class={`inline-flex items-center px-2 py-1 text-xs font-medium rounded-full transition-colors duration-200 ${
                                  postTag.toLowerCase().replace(/\s+/g, '-') === tag
                                    ? 'text-purple-600 dark:text-purple-400 bg-purple-100 dark:bg-purple-900 ring-2 ring-purple-500'
                                    : 'text-blue-600 dark:text-blue-400 bg-blue-100 dark:bg-blue-900 hover:bg-blue-200 dark:hover:bg-blue-800'
                                }`}
                              >
                                #{postTag}
                              </a>
                            ))}
                            {post.data.tags.length > 4 && (
                              <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 rounded-full">
                                +{post.data.tags.length - 4} more
                              </span>
                            )}
                          </div>
                        )}

                        <!-- Author & Read More -->
                        <div class="flex items-center justify-between">
                          <div class="flex items-center space-x-2">
                            {post.data.authorImage ? (
                              <img 
                                src={post.data.authorImage} 
                                alt={post.data.author || 'Author'}
                                class="w-6 h-6 rounded-full object-cover"
                                loading="lazy"
                              />
                            ) : (
                              <div class="w-6 h-6 bg-gray-300 dark:bg-gray-600 rounded-full flex items-center justify-center">
                                <svg class="w-3 h-3 text-gray-600 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                                </svg>
                              </div>
                            )}
                            <span class="text-sm text-gray-600 dark:text-gray-400">
                              {post.data.author || 'Kotacom Team'}
                            </span>
                            {post.data.readingTime && (
                              <>
                                <span class="text-gray-400">•</span>
                                <span class="text-sm text-gray-500 dark:text-gray-400">
                                  {post.data.readingTime} min read
                                </span>
                              </>
                            )}
                          </div>
                          
                          <a 
                            href={`/${post.slug}`}
                            class="inline-flex items-center text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300"
                          >
                            Read more
                            <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                            </svg>
                          </a>
                        </div>
                      </div>
                    </article>
                  ))}
                </div>

                <!-- Pagination -->
                {totalPages > 1 && (
                  <div class="flex items-center justify-between border-t border-gray-200 dark:border-gray-700 pt-8">
                    <div class="flex-1 flex justify-between sm:hidden">
                      {currentPage > 1 ? (
                        <a
                          href={`/tag/${tag}?page=${currentPage - 1}`}
                          class="relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700"
                        >
                          Previous
                        </a>
                      ) : (
                        <span></span>
                      )}
                      
                      {currentPage < totalPages ? (
                        <a
                          href={`/tag/${tag}?page=${currentPage + 1}`}
                          class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700"
                        >
                          Next
                        </a>
                      ) : (
                        <span></span>
                      )}
                    </div>

                    <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                      <div>
                        <p class="text-sm text-gray-700 dark:text-gray-300">
                          Showing <span class="font-medium">{startIndex + 1}</span> to{' '}
                          <span class="font-medium">{Math.min(endIndex, totalPosts)}</span> of{' '}
                          <span class="font-medium">{totalPosts}</span> results
                        </p>
                      </div>
                      
                      <div>
                        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                          {currentPage > 1 && (
                            <a
                              href={`/tag/${tag}?page=${currentPage - 1}`}
                              class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700"
                            >
                              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                              </svg>
                            </a>
                          )}
                          
                          {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
                            <a
                              href={page === 1 ? `/tag/${tag}` : `/tag/${tag}?page=${page}`}
                              class={`relative inline-flex items-center px-4 py-2 border text-sm font-medium ${
                                page === currentPage
                                  ? 'z-10 bg-purple-50 dark:bg-purple-900 border-purple-500 text-purple-600 dark:text-purple-400'
                                  : 'bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-600 text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700'
                              }`}
                            >
                              {page}
                            </a>
                          ))}
                          
                          {currentPage < totalPages && (
                            <a
                              href={`/tag/${tag}?page=${currentPage + 1}`}
                              class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700"
                            >
                              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                              </svg>
                            </a>
                          )}
                        </nav>
                      </div>
                    </div>
                  </div>
                )}
              </>
            ) : (
              <!-- No Posts -->
              <div class="text-center py-12">
                <svg class="mx-auto h-24 w-24 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                  No posts found
                </h3>
                <p class="text-gray-600 dark:text-gray-400 mb-6">
                  There are no blog posts tagged with "{tagName}" yet.
                </p>
                <div class="flex flex-wrap gap-2 justify-center">
                  <a href="/blog" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">
                    Browse All Posts
                  </a>
                  <a href="/" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors duration-200">
                    Go Home
                  </a>
                </div>
              </div>
            )}
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <CategorySidebar />
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>