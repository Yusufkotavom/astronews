---
import Layout from '../../layouts/Layout.astro';
import CategorySidebar from '../../components/partials/CategorySidebar.astro';
import { getCachedPosts, formatDate, getFeaturedPosts } from '../../utils/content-utils';

// Get all posts
const allPosts = await getCachedPosts();
const featuredPosts = await getFeaturedPosts(3);

// Filter out draft posts
const publishedPosts = allPosts.filter(post => !post.data.draft);

// Sort posts by date (newest first)
const sortedPosts = publishedPosts.sort((a, b) => 
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);

// Pagination
const postsPerPage = 6;
const currentPage = parseInt(Astro.url.searchParams.get('page') || '1');
const totalPosts = sortedPosts.length;
const totalPages = Math.ceil(totalPosts / postsPerPage);
const startIndex = (currentPage - 1) * postsPerPage;
const endIndex = startIndex + postsPerPage;
const paginatedPosts = sortedPosts.slice(startIndex, endIndex);

const pageTitle = currentPage > 1 ? `Blog - Page ${currentPage} | Kotacom` : 'Blog | Kotacom';
const pageDescription = 'Discover the latest articles, tutorials, and insights on web development, performance optimization, and modern technology trends.';
---

<Layout
  title={pageTitle}
  description={pageDescription}
  canonical={`https://www.kotacom.id/blog${currentPage > 1 ? `?page=${currentPage}` : ''}`}
>
  <div class="bg-white dark:bg-gray-900 min-h-screen">
    <!-- Blog Header -->
    <section class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-800 dark:to-gray-900 py-16">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
            Our Blog
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-8">
            Stay updated with the latest insights, tutorials, and trends in web development, 
            performance optimization, and modern technology.
          </p>
          <div class="flex items-center justify-center space-x-8 text-sm text-gray-500 dark:text-gray-400">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>{totalPosts} Articles</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <span>{featuredPosts.length} Featured</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              </svg>
              <span>Weekly Updates</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-12">
          
          <!-- Main Content Area -->
          <div class="lg:col-span-3">
            
            <!-- Featured Posts Section -->
            {featuredPosts.length > 0 && currentPage === 1 && (
              <div class="mb-16">
                <div class="flex items-center justify-between mb-8">
                  <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Featured Articles</h2>
                  <div class="h-px flex-1 bg-gradient-to-r from-blue-500 to-transparent ml-8"></div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                  {featuredPosts.map((post) => (
                    <article class="group">
                      <div class="relative overflow-hidden rounded-xl bg-gray-200 dark:bg-gray-700 aspect-video mb-4">
                        {post.data.image ? (
                          <img 
                            src={post.data.image} 
                            alt={post.data.imageAlt || post.data.title}
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            loading="lazy"
                          />
                        ) : (
                          <div class="w-full h-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
                            <svg class="w-12 h-12 text-white opacity-50" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                            </svg>
                          </div>
                        )}
                        <div class="absolute top-4 left-4">
                          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                            Featured
                          </span>
                        </div>
                      </div>
                      
                      <div class="space-y-3">
                        <div class="flex items-center space-x-3">
                          {post.data.category && (
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
                              {post.data.category}
                            </span>
                          )}
                          <time class="text-sm text-gray-500 dark:text-gray-400">
                            {formatDate(post.data.publishDate)}
                          </time>
                        </div>
                        
                        <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200">
                          <a href={`/${post.slug}`} class="hover:underline">
                            {post.data.title}
                          </a>
                        </h3>
                        
                        <p class="text-gray-600 dark:text-gray-400 line-clamp-2">
                          {post.data.description}
                        </p>
                        
                        <div class="flex items-center justify-between pt-2">
                          <div class="flex items-center space-x-2">
                            {post.data.authorImage ? (
                              <img 
                                src={post.data.authorImage} 
                                alt={post.data.author || 'Author'}
                                class="w-6 h-6 rounded-full object-cover"
                                loading="lazy"
                              />
                            ) : (
                              <div class="w-6 h-6 bg-gray-300 dark:bg-gray-600 rounded-full flex items-center justify-center">
                                <svg class="w-3 h-3 text-gray-600 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                                </svg>
                              </div>
                            )}
                            <span class="text-sm text-gray-600 dark:text-gray-400">
                              {post.data.author || 'Kotacom Team'}
                            </span>
                          </div>
                          
                          <a 
                            href={`/${post.slug}`}
                            class="inline-flex items-center text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300"
                          >
                            Read more
                            <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                            </svg>
                          </a>
                        </div>
                      </div>
                    </article>
                  ))}
                </div>
              </div>
            )}

            <!-- All Posts Section -->
            <div>
              <div class="flex items-center justify-between mb-8">
                <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                  {currentPage === 1 ? 'Latest Articles' : `Articles - Page ${currentPage}`}
                </h2>
                <div class="h-px flex-1 bg-gradient-to-r from-gray-300 to-transparent ml-8 dark:from-gray-600"></div>
              </div>

              {paginatedPosts.length > 0 ? (
                <>
                  <!-- Posts Grid -->
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
                    {paginatedPosts.map((post) => (
                      <article class="bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden transition-all duration-300 group">
                        <!-- Featured Image -->
                        <div class="aspect-video bg-gray-200 dark:bg-gray-700 overflow-hidden">
                          {post.data.image ? (
                            <img 
                              src={post.data.image} 
                              alt={post.data.imageAlt || post.data.title}
                              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                              loading="lazy"
                            />
                          ) : (
                            <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-600 flex items-center justify-center">
                              <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                              </svg>
                            </div>
                          )}
                        </div>

                        <!-- Content -->
                        <div class="p-6">
                          <!-- Meta Info -->
                          <div class="flex items-center justify-between mb-3">
                            <div class="flex items-center space-x-2">
                              {post.data.category && (
                                <a 
                                  href={`/category/${post.data.category.toLowerCase().replace(/\s+/g, '-')}`}
                                  class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300 hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors duration-200"
                                >
                                  {post.data.category}
                                </a>
                              )}
                              
                              {post.data.difficulty && (
                                <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                                  post.data.difficulty === 'Beginner' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' :
                                  post.data.difficulty === 'Intermediate' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300' :
                                  'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300'
                                }`}>
                                  {post.data.difficulty}
                                </span>
                              )}
                              
                              {post.data.featured && (
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300">
                                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                  </svg>
                                  Featured
                                </span>
                              )}
                            </div>
                            
                            <time class="text-sm text-gray-500 dark:text-gray-400">
                              {formatDate(post.data.publishDate)}
                            </time>
                          </div>

                          <!-- Title & Description -->
                          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200">
                            <a href={`/${post.slug}`} class="hover:underline">
                              {post.data.title}
                            </a>
                          </h3>
                          
                          <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
                            {post.data.description}
                          </p>

                          <!-- Tags -->
                          {post.data.tags && post.data.tags.length > 0 && (
                            <div class="flex flex-wrap gap-2 mb-4">
                              {post.data.tags.slice(0, 3).map((tag) => (
                                <a 
                                  href={`/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                                  class="inline-flex items-center px-2 py-1 text-xs font-medium text-blue-600 dark:text-blue-400 bg-blue-100 dark:bg-blue-900 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors duration-200"
                                >
                                  #{tag}
                                </a>
                              ))}
                              {post.data.tags.length > 3 && (
                                <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 rounded-full">
                                  +{post.data.tags.length - 3} more
                                </span>
                              )}
                            </div>
                          )}

                          <!-- Author & Read More -->
                          <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-2">
                              {post.data.authorImage ? (
                                <img 
                                  src={post.data.authorImage} 
                                  alt={post.data.author || 'Author'}
                                  class="w-6 h-6 rounded-full object-cover"
                                  loading="lazy"
                                />
                              ) : (
                                <div class="w-6 h-6 bg-gray-300 dark:bg-gray-600 rounded-full flex items-center justify-center">
                                  <svg class="w-3 h-3 text-gray-600 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                                  </svg>
                                </div>
                              )}
                              <span class="text-sm text-gray-600 dark:text-gray-400">
                                {post.data.author || 'Kotacom Team'}
                              </span>
                              {post.data.readingTime && (
                                <>
                                  <span class="text-gray-400">â€¢</span>
                                  <span class="text-sm text-gray-500 dark:text-gray-400">
                                    {post.data.readingTime} min read
                                  </span>
                                </>
                              )}
                            </div>
                            
                            <a 
                              href={`/${post.slug}`}
                              class="inline-flex items-center text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300"
                            >
                              Read more
                              <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                              </svg>
                            </a>
                          </div>
                        </div>
                      </article>
                    ))}
                  </div>

                  <!-- Pagination -->
                  {totalPages > 1 && (
                    <div class="flex items-center justify-between border-t border-gray-200 dark:border-gray-700 pt-8">
                      <div class="flex-1 flex justify-between sm:hidden">
                        {currentPage > 1 ? (
                          <a
                            href={`/blog?page=${currentPage - 1}`}
                            class="relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700"
                          >
                            Previous
                          </a>
                        ) : (
                          <span></span>
                        )}
                        
                        {currentPage < totalPages ? (
                          <a
                            href={`/blog?page=${currentPage + 1}`}
                            class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700"
                          >
                            Next
                          </a>
                        ) : (
                          <span></span>
                        )}
                      </div>

                      <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                        <div>
                          <p class="text-sm text-gray-700 dark:text-gray-300">
                            Showing <span class="font-medium">{startIndex + 1}</span> to{' '}
                            <span class="font-medium">{Math.min(endIndex, totalPosts)}</span> of{' '}
                            <span class="font-medium">{totalPosts}</span> results
                          </p>
                        </div>
                        
                        <div>
                          <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                            {currentPage > 1 && (
                              <a
                                href={`/blog?page=${currentPage - 1}`}
                                class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700"
                              >
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                              </a>
                            )}
                            
                            {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
                              <a
                                href={page === 1 ? '/blog' : `/blog?page=${page}`}
                                class={`relative inline-flex items-center px-4 py-2 border text-sm font-medium ${
                                  page === currentPage
                                    ? 'z-10 bg-blue-50 dark:bg-blue-900 border-blue-500 text-blue-600 dark:text-blue-400'
                                    : 'bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-600 text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700'
                                }`}
                              >
                                {page}
                              </a>
                            ))}
                            
                            {currentPage < totalPages && (
                              <a
                                href={`/blog?page=${currentPage + 1}`}
                                class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700"
                              >
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                </svg>
                              </a>
                            )}
                          </nav>
                        </div>
                      </div>
                    </div>
                  )}
                </>
              ) : (
                <!-- No Posts -->
                <div class="text-center py-12">
                  <svg class="mx-auto h-24 w-24 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.238 0-4.29.91-5.758 2.379.674.379 1.406.621 2.206.621 2.657 0 4.79-1.343 5.552-3.379z" />
                  </svg>
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                    No posts found
                  </h3>
                  <p class="text-gray-600 dark:text-gray-400 mb-6">
                    We're working on creating amazing content for you. Check back soon!
                  </p>
                  <a href="/" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">
                    Go Home
                  </a>
                </div>
              )}
            </div>
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <CategorySidebar />
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>